{
    "blog": {
      "title": {
        "type": "string",
        "validators": [
          "required",
          "min:3",
          "max:200"
        ]
      },
      "content": {
        "type": "text",
        "validators": [
          "required",
          "min:7"
        ]
      },
      "video_url": {
        "type": "string",
        "validators": ["required"]
      }
    },
    "product": {
        "name": {
            "type": "string",
            "validators": [
                "required",
                "min:3",
                "max:100"
            ]
        },
        "sku": {
            "type": "string",
            "validators": [
                "required",
                "min:3",
                "max:100",
                "unique",
                "alpha_dash"
            ]
        },
        "description": {
            "type": "text",
            "validators": [
                "required",
                "min:100"
            ]
        },
        "price": {
            "type": "integer",
            "validators": [
                "required",
                "numeric"
            ]
        },
        "available": {
            "type": "integer",
            "validators": [
                "required",
                "numeric"
            ]
        },
        "weight": {
            "type": "integer",
            "validators": [
                "required",
                "numeric"
            ]
        },
        "perishable": {
            "type": "boolean",
            "validators": [
                "required"
            ]
        },
        "categories": {
            "type": "string",
            "validators": []
        }
    },
    "favorite": {
        "product_id": {
            "type": "integer",
            "validators": [
                "required",
                "numeric"
            ]
        },
        "user_id": {
            "type": "integer",
            "validators": [
                "required",
                "numeric"
            ]
        }
    }
}
